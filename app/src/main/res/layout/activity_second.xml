<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/frame"
        android:layout_weight="9"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/radio_group"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#fff">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_1"
            android:background="@mipmap/firstpage_1"
            android:button="@null"
            android:layout_weight="1"
            android:padding="0dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_2"
            android:background="@mipmap/type_1"
            android:button="@null"
            android:layout_weight="1"
            android:padding="0dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_3"
            android:layout_weight="1"
            android:background="@mipmap/find_1"
            android:button="@null"
            android:padding="0dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_4"
            android:layout_weight="1"
            android:background="@mipmap/shoping"
            android:button="@null"
            android:padding="0dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_5"
            android:layout_weight="1"
            android:background="@mipmap/my_1"
            android:button="@null"
            android:padding="0dp"/>
    </RadioGroup>
</LinearLayout>